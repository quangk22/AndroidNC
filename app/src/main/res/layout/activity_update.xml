<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">


    <ImageView
        android:id="@+id/imageAvatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/buttonChupHinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chụp hình"
        android:layout_toRightOf="@+id/imageAvatar"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/teal_200"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonChonHinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonChupHinh"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/imageAvatar"
        android:text="Chọn hình"
        android:backgroundTint="@color/teal_200"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editTextNhapTen"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageAvatar"
        android:layout_centerInParent="true"
        android:layout_marginTop="75dp"
        android:background="@drawable/input"
        android:ems="10"
        android:inputType="text"
        android:hint="Name"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextSDT"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextNhapTen"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/input"
        android:ems="10"
        android:inputType="text"
        android:hint="Số điện thoại"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonLuu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSDT"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="238dp"
        android:backgroundTint="@color/teal_200"
        android:hint="Lưu"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonQuyLai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSDT"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="98dp"
        android:backgroundTint="@color/teal_200"
        android:hint="Quay lại"
        android:textColor="@color/black"
        android:textStyle="bold"/>


</RelativeLayout>